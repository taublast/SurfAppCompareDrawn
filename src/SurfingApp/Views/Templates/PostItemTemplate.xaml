<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SurfingApp.Views.Templates.PostItemTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SurfingApp.Converters"
    xmlns:models="clr-namespace:SurfingApp.Models">
    <ContentView.Resources>
        <ResourceDictionary>

            <converters:ToUpperConverter x:Key="ToUpperConverter" />


            <Style
                x:Key="PostBorderStyle"
                TargetType="Border">
                <Setter Property="StrokeThickness" Value="0" />
                <Setter Property="HeightRequest" Value="240" />
            </Style>

            <Style
                x:Key="UserBorderStyle"
                TargetType="Border">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Stroke" Value="{Binding User.Color}" />
                <Setter Property="StrokeThickness" Value="4" />
                <Setter Property="HeightRequest" Value="54" />
                <Setter Property="WidthRequest" Value="54" />
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="Margin" Value="12" />
            </Style>

            <Style
                x:Key="UserNameStyle"
                TargetType="Label">
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <Style
                x:Key="CreatedAtStyle"
                TargetType="Label">
                <Setter Property="FontSize" Value="10" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="Opacity" Value="0.75" />
            </Style>

            <Style
                x:Key="InfoLayoutStyle"
                TargetType="StackLayout">
                <Setter Property="Margin" Value="12, 0" />
            </Style>

            <Style
                x:Key="HeartIconStyle"
                TargetType="Path">
                <Setter Property="Fill" Value="Black" />
                <Setter Property="Scale" Value="0.5" />
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <Style
                x:Key="HeartTextStyle"
                TargetType="Label">
                <Setter Property="FontSize" Value="10" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="Margin" Value="2, 0" />
            </Style>

            <Style
                x:Key="MarkIconStyle"
                TargetType="Path">
                <Setter Property="Fill" Value="Black" />
                <Setter Property="Scale" Value="0.5" />
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <Style
                x:Key="PlayBorderStyle"
                TargetType="Border">
                <Setter Property="Background" Value="White" />
                <Setter Property="StrokeThickness" Value="0" />
                <Setter Property="HeightRequest" Value="44" />
                <Setter Property="WidthRequest" Value="44" />
                <Setter Property="Margin" Value="12" />
            </Style>

            <Style
                x:Key="PlayIconStyle"
                TargetType="Path">
                <Setter Property="Fill" Value="Black" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="Scale" Value="0.5" />
                <Setter Property="Margin" Value="6" />
            </Style>

            <Style
                x:Key="TitleTextStyle"
                TargetType="Label">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="LineBreakMode" Value="WordWrap" />
                <Setter Property="MaxLines" Value="2" />
                <Setter Property="HorizontalOptions" Value="Start" />
            </Style>

            <Style
                x:Key="FromTextStyle"
                TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextColor" Value="LightGray" />
                <Setter Property="Opacity" Value="0.95" />
            </Style>

        </ResourceDictionary>
    </ContentView.Resources>

    <Grid x:DataType="models:Post">
        <Border Style="{StaticResource PostBorderStyle}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12, 120, 12, 12" />
            </Border.StrokeShape>
            <!--<Border.Shadow>
                <Shadow
                    Opacity="0.15"
                    Offset="1, 1"/>
            </Border.Shadow>-->
            <Grid>
                <Image
                    Aspect="AspectFill"
                    Source="{Binding Image}" />
                <Grid
                    BackgroundColor="Black"
                    Opacity="0.1" />
                <Grid
                    ColumnDefinitions="72, Auto"
                    RowDefinitions="Auto, Auto, *">
                    <Grid HorizontalOptions="Start">
                        <Border Style="{StaticResource UserBorderStyle}">
                            <Border.StrokeShape>
                                <Ellipse />
                            </Border.StrokeShape>
                            <Image
                                Margin="1"
                                HorizontalOptions="Center"
                                Source="{Binding User.Image}"
                                VerticalOptions="Center">
                                <Image.Clip>
                                    <EllipseGeometry
                                        Center="25, 25"
                                        RadiusX="25"
                                        RadiusY="25" />
                                </Image.Clip>
                            </Image>
                        </Border>
                    </Grid>
                    <Grid
                        Grid.Column="1"
                        Margin="0,18"
                        RowDefinitions="Auto, Auto">
                        <Label
                            Style="{StaticResource UserNameStyle}"
                            Text="{Binding User.Name, Converter={StaticResource ToUpperConverter}}" />
                        <Label
                            Grid.Row="1"
                            Style="{StaticResource CreatedAtStyle}"
                            Text="4 HOURS AGO" />
                    </Grid>
                    <StackLayout
                        Grid.Row="1"
                        Style="{StaticResource InfoLayoutStyle}">

                        <StackLayout Orientation="Horizontal">
                            <Path
                                Data="M8.5319849,0C11.560988,7.3866431E-08 14.464015,1.6680007 15.99997,4.5209999 18.139016,0.55099538 22.921994,-1.1230173 27.008008,0.7949839 31.297024,2.8069787 33.185032,8.0069957 31.22604,12.411997 29.27303,16.804 15.998994,30.380001 15.998994,30.380001 15.915985,30.327022 2.7269701,16.804 0.77395964,12.411997 -1.1850933,8.0069957 0.70291448,2.8069787 4.9929701,0.7949839 6.1419612,0.25497467 7.3469826,7.3866431E-08 8.5319849,0z"
                                Style="{StaticResource HeartIconStyle}" />
                            <Label
                                Style="{StaticResource HeartTextStyle}"
                                Text="{Binding Likes}" />
                        </StackLayout>
                        <Grid>
                            <Path
                                Data="M4.2800019,0L11.127999,0C13.491008,0,15.408001,1.9349976,15.408001,4.3209839L15.408001,32 7.5820063,23.104004 0,32 0,4.3209839C2.0228617E-07,1.9349976,1.9169938,0,4.2800019,0z"
                                Style="{StaticResource MarkIconStyle}" />
                        </Grid>
                    </StackLayout>

                    <!--  PLAY + TITLE  -->
                    <Grid
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Margin="0,12"
                        ColumnDefinitions="Auto, *"
                        VerticalOptions="End">
                        <Border Style="{StaticResource PlayBorderStyle}">
                            <Border.StrokeShape>
                                <Ellipse />
                            </Border.StrokeShape>
                            <!--<Border.Shadow>
                                <Shadow
                                    Opacity="0.5"
                                    Offset="4, 4"/>
                            </Border.Shadow>-->
                            <Path
                                Data="M0,0L15.825011,8.0009766 31.650999,15.997986 15.825011,23.998993 0,32 0,15.997986z"
                                Style="{StaticResource PlayIconStyle}" />
                        </Border>
                        <StackLayout Grid.Column="1">
                            <Label
                                Style="{StaticResource TitleTextStyle}"
                                Text="{Binding Title}">
                                <!--<Label.Shadow>
                                    <Shadow
                                        Opacity="0.5"/>
                                </Label.Shadow>-->
                            </Label>
                            <Label
                                Style="{StaticResource FromTextStyle}"
                                Text="{Binding User.From, Converter={StaticResource ToUpperConverter}}" />
                        </StackLayout>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ContentView>
